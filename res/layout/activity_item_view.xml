<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="15dip"
    android:paddingLeft="15dip"
    android:background="@android:color/white"
    android:paddingTop="15dip" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/img_view_id"
            style="@style/image_style"  
            android:src="@drawable/test_pic_subject" />

        <TextView
            android:id="@+id/img_mark_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:text="线上"
            android:textColor="@android:color/white"
            android:textSize="10dip" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="5dip"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="3个IT男创业，100天卖出20万个肉夹馍"
            android:textColor="@android:color/black"
            android:textSize="16dip" />


        <TextView
            android:id="@+id/desp_view_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="8dip"
            android:text="主题：经过45个不眠夜，在众多明星导师的指导下"
            android:textColor="@color/color_555555"
            android:textSize="14dip" />
    </LinearLayout>

</LinearLayout>