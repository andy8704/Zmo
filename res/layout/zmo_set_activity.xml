<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEDEDE"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/pic_btn_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:paddingBottom="15dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="15dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="头像"
            android:textColor="@color/color_font1"
            android:textSize="14dip" />

        <ImageView
            android:id="@+id/arrow_id"
            android:layout_width="6dip"
            android:layout_height="12dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:src="@drawable/arrow_right" />

        <com.ad.view.shapeimageview.CircularImageView
            android:id="@+id/img_view_id"
            android:layout_width="35dip"
            android:layout_height="35dip"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/arrow_id"
            android:scaleType="fitXY"
            android:src="@drawable/default_user_icon" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#DEDEDE" />

    <LinearLayout
        android:id="@+id/name_btn_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="15dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="15dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称"
            android:textColor="@color/color_font1"
            android:textSize="14dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_weight="1"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/name_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王晓明"
            android:textColor="@color/color_font1"
            android:textSize="14dip" />

        <ImageView
            android:layout_width="6dip"
            android:layout_height="12dip"
            android:layout_marginLeft="10dip"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#DEDEDE" />

    <LinearLayout
        android:id="@+id/occupation_btn_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="15dip"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:paddingTop="15dip" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职业"
            android:textColor="@color/color_font1"
            android:textSize="14dip" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_weight="1"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/occupation_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xx公司创始人兼首席运营总监"
            android:textColor="@color/color_font1"
            android:textSize="14dip" />

        <ImageView
            android:layout_width="6dip"
            android:layout_height="12dip"
            android:layout_marginLeft="10dip"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/modify_pwd_btn_id"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="20dip"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dip"
        android:paddingRight="15dip" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="修改密码"
            android:textColor="@color/color_font1"
            android:textSize="14dip" />

        <ImageView
            android:layout_width="6dip"
            android:layout_height="12dip"
            android:layout_marginLeft="10dip"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/exit_btn_id"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="20dip"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dip"
        android:paddingRight="15dip" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="退出账号"
            android:textColor="@color/color_font1"
            android:textSize="14dip" />

        <ImageView
            android:layout_width="6dip"
            android:layout_height="12dip"
            android:layout_marginLeft="10dip"
            android:src="@drawable/arrow_right" />
    </LinearLayout>

</LinearLayout>