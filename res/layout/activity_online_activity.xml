<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dip" >

    <ImageView
        android:id="@+id/img_view_id"
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:scaleType="centerCrop"
        android:src="@drawable/test_pic_subject" />

    <TextView
        android:id="@+id/subject_view_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:gravity="left|center_vertical"
        android:textColor="@color/color_555555"
        android:textSize="14dip" />

    <TextView
        android:id="@+id/addr_view_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:gravity="left|center_vertical"
        android:textColor="@color/color_555555"
        android:textSize="14dip" />

    <TextView
        android:id="@+id/time_view_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:gravity="left|center_vertical"
        android:textColor="@color/color_555555"
        android:textSize="14dip" />

    <TextView
        android:id="@+id/price_view_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:gravity="left|center_vertical"
        android:textColor="@color/color_555555"
        android:textSize="14dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="15dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/signup_btn_id"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="45dip"
            android:background="@color/color_title_bg"
            android:singleLine="true"
            android:text="报名"
            android:layout_marginRight="15dip"
            android:textColor="@color/color_tool_text"
            android:textSize="16dip" />

        <Button
            android:id="@+id/save_btn_id"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="45dip"
            android:background="@color/color_title_bg"
            android:singleLine="true"
            android:text="收藏"
            android:layout_marginLeft="15dip"
            android:textColor="@color/color_tool_text"
            android:textSize="16dip" />
    </LinearLayout>

</LinearLayout>