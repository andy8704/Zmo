<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/function_btn_id"
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dip"
        android:paddingRight="15dip" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/function_lable_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="课程"
            android:textColor="@color/color_tool_text"
            android:textSize="16dip" />

        <TextView
            android:id="@+id/count_view_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:text="28"
            android:textColor="@color/color_tool_text"
            android:textSize="16dip" />

        <ImageView
            android:layout_width="11dip"
            android:layout_height="18dip"
            android:src="@drawable/vote_org_arrow" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_divider" />

    <LinearLayout
        android:id="@+id/groupview_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dip"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>