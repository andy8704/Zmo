<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEDEDE"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="15dip"
                android:paddingLeft="15dip"
                android:paddingTop="15dip" >

                <com.ad.view.shapeimageview.CircularImageView
                    android:id="@+id/user_img_id"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_user_icon" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="5dip"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/user_name_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="王晓明"
                        android:textColor="@color/color_font1"
                        android:textSize="14dip" />

                    <TextView
                        android:id="@+id/user_occupation_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/user_name_id"
                        android:layout_marginLeft="8dip"
                        android:layout_toRightOf="@id/user_name_id"
                        android:text="xx公司创始人兼首席运营总监"
                        android:textColor="@color/color_font1"
                        android:textSize="12dip" />

                    <TextView
                        android:id="@+id/user_level_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_name_id"
                        android:layout_marginTop="5dip"
                        android:text="铜牌会员"
                        android:textColor="@color/color_font1"
                        android:textSize="12dip" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/order_linearlayout_id"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:paddingRight="15dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="订单"
                    android:textColor="@color/color_font1"
                    android:textSize="12dip" />

                <TextView
                    android:id="@+id/order_count_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="（14）"
                    android:textColor="@color/color_font1"
                    android:textSize="12dip" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看全部订单"
                    android:textColor="@color/color_font1"
                    android:textSize="12dip" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#DEDEDE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dip"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <com.zmo.view.ZmoOrderView
                    android:id="@+id/ordered_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >
                </com.zmo.view.ZmoOrderView>

                <com.zmo.view.ZmoOrderView
                    android:id="@+id/un_order_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >
                </com.zmo.view.ZmoOrderView>

                <com.zmo.view.ZmoOrderView
                    android:id="@+id/close_order_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >
                </com.zmo.view.ZmoOrderView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/save_linearlayout_id"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginTop="15dip"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dip"
                android:paddingRight="15dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏"
                    android:textColor="@color/color_font1"
                    android:textSize="12dip" />

                <TextView
                    android:id="@+id/save_count_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dip"
                    android:text="（14）"
                    android:textColor="@color/color_font1"
                    android:textSize="12dip" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看全部收藏"
                    android:textColor="@color/color_font1"
                    android:textSize="12dip" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#DEDEDE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dip"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <com.zmo.view.ZmoOrderView
                    android:id="@+id/save_activity_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >
                </com.zmo.view.ZmoOrderView>

                <com.zmo.view.ZmoOrderView
                    android:id="@+id/save_course_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >
                </com.zmo.view.ZmoOrderView>

                <com.zmo.view.ZmoOrderView
                    android:id="@+id/save_tutor_view_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >
                </com.zmo.view.ZmoOrderView>
            </LinearLayout>

            <TextView
                android:id="@+id/set_btn_id"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginTop="20dip"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:text="设置"
                android:textColor="@color/color_font1"
                android:textSize="12dip" />

            <TextView
                android:id="@+id/about_btn_id"
                android:layout_width="match_parent"
                android:layout_height="40dip"
                android:layout_marginTop="20dip"
                android:background="@android:color/white"
                android:gravity="center_vertical"
                android:paddingLeft="10dip"
                android:text="关于"
                android:textColor="@color/color_font1"
                android:textSize="12dip" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>