<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="15dip"
    android:background="@color/color_tool_bg"
    android:paddingRight="15dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/mobile_tab_id"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:gravity="center"
            android:text="手机"
            android:textColor="@android:color/white" >
        </TextView>

        <TextView
            android:id="@+id/email_tab_id"
            android:layout_width="match_parent"
            android:layout_height="35dip"
            android:layout_weight="1"
            android:background="@android:color/background_dark"
            android:gravity="center"
            android:text="邮箱"
            android:textColor="@android:color/white" >
        </TextView>
    </LinearLayout>

    <com.zmo.view.ZmoEditText
        android:id="@+id/login_edit_id"
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginTop="40dip" />

    <LinearLayout
        android:id="@+id/get_code_linearlayout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.zmo.view.ZmoEditText
            android:id="@+id/code_edit_id"
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:layout_weight="1" />

        <Button
            android:id="@+id/get_code_btn_id"
            android:layout_width="wrap_content"
            android:layout_height="45dip"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:text="获取验证码" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_marginTop="40dip"
        android:gravity="center"
        android:text="下一步"
        android:textSize="14dip" />

</LinearLayout>